<%- include('../../partials/head.ejs') %>

<div class="container my_container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4>Log in to Your Account</h4>
                <form action="/auth/login" method="POST">
                    <div class="form-group mt-3">
                        <label for="email">Enter Your Valid Email</label>
                        <input type="email" name="email" id="email" class="form-control <%= error.email?'is-invalid':'' %>">
                        <div class="invalid-feedback">
                            <%= error.email && error.email %>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label for="password">Enter Password</label>
                        <input type="password" name="password" id="password" class="form-control <%=error.password?'is-invalid':'' %> ">
                        <div class="invalid-feedback">
                            <%= error.password && error.password %>
                        </div>
                    </div>
                    <input type="submit" value="Log in" class="btn btn-primary mt-3">
                </form>
                <a href="/auth/signup" class="my-3 text-center text-decoration-none">Don't Have an Account? Create
                    One.</a>
            </div>
        </div>
    </div>
</div>


<%- include('../../partials/footer.ejs') %>

</body>

</html>